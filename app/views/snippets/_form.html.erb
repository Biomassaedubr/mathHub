<%= form_for(@snippet) do |f| %>
  <% if @snippet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@snippet.errors.count, "error") %> prohibited this snippet from being saved:</h2>

      <ul>
      <% @snippet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field row title-container">
    <div class="col-md-10">
      <%= f.label :title , class: "compact title-label" %><br>
      <%= f.text_field :title, class: "undecorated title", placeholder: "Unnamed", type:"text", autocomplete:"off" %>
    </div>
    <div class="col-md-2">
      <%= f.submit "Save", class:"submit flat undecorated" %>
    </div>
  </div>
  <%= react_component('MarkdownEditor', {body: @snippet.body}) %>
  <script>
    MathJax.Hub.Config({
      skipStartupTypeset: true
    });
  </script>
<% end %>